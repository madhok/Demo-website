<% provide(:title, "Employer Sign in") %>
<h1>Employer Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: employersigncreate_path) do |f| %>
        <%=f.hidden_field :session_type, :value=> session.class %><br/>
        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

       <%= f.submit  "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New Employer? <%= link_to "Sign up now!", employercreate_path  %></p>
  </div>
</div>